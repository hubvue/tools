{
  "name": "@cckim/monorepo",
  "version": "1.0.1-beta.3",
  "private": true,
  "description": "tools",
  "module": "true",
  "publishConfig": {
    "directory": "packages/*"
  },
  "scripts": {
    "build": "esmo ./scripts/build.ts",
    "build:all": "esmo ./scripts/build.ts --all",
    "format": "eslint --fix . --ext .js,.ts,.cjs,.mjs",
    "ci": "bumpp package.json packages/*/package.json --commit --push --tag",
    "release": "run-s build:all format ci"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.19.4",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "benchmark": "^2.1.4",
    "bumpp": "^7.1.1",
    "chalk": "^5.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "esmo": "^0.14.1",
    "inquirer": "^8.2.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "minimist": "^1.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rollup": "^2.69.1",
    "rollup-plugin-typescript2": "^0.31.2",
    "typescript": "^4.6.2"
  }
}
